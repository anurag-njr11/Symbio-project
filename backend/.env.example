# MongoDB Connection
MONGODB_URI=your_mongodb_connection_string

# JWT Secret (change this to a random string in production)
JWT_SECRET=your-secret-key-change-this-in-production

# Session Secret (change this to a random string in production)
SESSION_SECRET=session-secret-change-this

# Google OAuth (Optional - get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth (Optional - get from https://github.com/settings/developers)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Microsoft OAuth (Optional - get from https://portal.azure.com/)
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Server Port
PORT=3000
